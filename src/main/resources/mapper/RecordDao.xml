<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.dao.RecordDao">
    <!--查询所有咨询记录-->
    <select id="findAllRecord" resultType="com.example.demo.domain.Record">
        select * from record limit #{pageNum}, #{pageSize}
    </select>
    <select id="findAllRecordCount" resultType="long">
        select count(1) from record
    </select>
    <!--查找对应访客的咨询记录-->
    <select id="findAllRecordByName" resultType="com.example.demo.domain.Record">
        select * from record where v_name like #{name}"%" limit #{pageNum}, #{pageSize}
    </select>
    <select id="findAllRecordByNameCount" resultType="long">
        select count(1) from record where v_name = #{name}
    </select>
    <!--查找对应咨询师的咨询记录-->
    <select id="findAllRecordByConName" resultType="com.example.demo.domain.Record">
        select * from record where c_username like #{username}"%" limit #{pageNum}, #{pageSize}
    </select>
    <select id="findAllRecordByConNameCount" resultType="long">
        select count(1) from record where c_username = #{username}
    </select>
    <!--找到所有与该督导绑定的咨询师的username-->
    <select id="findAllBindByUsername" parameterType="String" resultType="String">
        select username from worker where bind_username = #{username}
    </select>
    <!--找到与自己绑定的咨询师的咨询记录-->
    <select id="findAllRecordBindByUsername" resultType="com.example.demo.domain.Record">
        select * from record <where>
        <if test="list != null and list.size() > 0">
            AND c_username in
                        <foreach collection="list" item="username" open = "(" separator="," close=")">
                            #{username}
                        </foreach>
        </if>
    </where> limit #{pageNum}, #{pageSize}
    </select>

    <select id="findAllBindRecordCount" resultType="long">
        select count(1) from record <where>
        <if test="list != null and list.size() > 0">
            AND c_username in
                        <foreach collection="list" item="username" open="(" separator="," close=")">
                            #{username}
                        </foreach>
        </if>
    </where>
    </select>
</mapper>